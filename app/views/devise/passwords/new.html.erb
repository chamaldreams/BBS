
<div class="row">
<div class= "col-md-10 col-md-offset-1">

<div class="jumbotron jumbotron-fluid">
 <div class="container">
 <h2><center>Forgot your password?</h2></center>
<div class="col-md-4 col-md-offset-4">


</br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages'%>

  <div class="input-group">
   
    <%= f.email_field :email, autofocus: true,class: 'form-control', placeholder: 'Enter your email' %>
    <span class="input-group-addon">
  <span class="glyphicon glyphicon-envelope"></span>
    
  </span>
  </div>

  </br>

  
    <%= f.submit "Send me reset password instructions", class: 'btn-block btn btn-warning' %>
  
<% end %>
 </br>
    <%= link_to 'Log In', new_session_path(resource_name), class: 'btn-block btn btn-primary' %>

    <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'btn-block btn btn-success' %>


</div>
</div>
</div>
</div>
</div>