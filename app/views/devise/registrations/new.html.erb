

<div class="row">
<div class= "col-md-10 col-md-offset-1">
<div class="jumbotron jumbotron-fluid">
<div class="container">
<div class="col-md-4 col-md-offset-4">

<div class="col-md-12">
    <%= image_tag 'Aqua.png', class: 'img-responsive' %>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render 'devise/shared/error_messages' %>


<div class="input-group"> 
  <%= f.text_field :first_name, autofocus: true,class: 'form-control', placeholder: 'First Name' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-user"></span>
    
  </span>
  </div>
</br>

<div class="input-group"> 
  <%= f.text_field :last_name, autofocus: true,class: 'form-control', placeholder: 'Last Name' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-user"></span>
    
  </span>
  </div>
</br>


  <div class="input-group"> 
  <%= f.email_field :email, autofocus: true,class: 'form-control', placeholder: 'Email' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-envelope"></span>
    
  </span>
  </div>
</br>

 
    
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

     <div class="input-group">
    <%= f.password_field :password, autocomplete: "off",class: 'form-control', placeholder: 'Password' %>
<span class="input-group-addon">
  <span class="glyphicon glyphicon-lock"></span>
    
  </span>

  </div>
</br>

  <div class="input-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'enter password again' %>

    <span class="input-group-addon">
  <span class="glyphicon glyphicon-lock"></span>
    
  </span>
  </div>
  </br>


  <div class="input-group"> 
  <%= f.text_field :company_name, autofocus: true,class: 'form-control', placeholder: 'Company Name' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-briefcase"></span>
    
  </span>
  </div>
</br>

<div class="input-group"> 
  <%= f.text_field :telephone, autofocus: true,class: 'form-control', placeholder: 'Telephone' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-phone-alt"></span>
    
  </span>
  </div>
</br>

<div class="input-group"> 
  <%= f.text_field :web, autofocus: true,class: 'form-control', placeholder: 'Web' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-bookmark"></span>
    
  </span>
  </div>
</br>

<div class="input-group"> 
  <%= f.text_field :billing_address, autofocus: true,class: 'form-control', placeholder: 'Billing Address' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-home"></span>
    
  </span>
  </div>
</br>

<div class="input-group"> 
  <%= f.text_field :shipping, autofocus: true,class: 'form-control', placeholder: 'Shipping Address' %>
  <span class="input-group-addon">
  <span class="glyphicon glyphicon-gift"></span>
    
  </span>
  </div>
</br>


     
    <%= f.submit "Sign up", class: 'btn-block btn btn-success' %>
  
<% end %>
</br>
<%=link_to 'Log In', new_session_path(resource_name) , class: 'btn-block btn btn-primary'%>
</div>
</div>
</div>
</div>
</div>